<%- include('../partials/header.ejs') %>

<% if (cars.length > 0) { %>
<div class="car-listing">
  <% cars.forEach((car) => { %>
    <div class="car-card">
      <% if (car.photo) { %>
        <img src="<%= car.photo %>" alt="<%= car.name %>" class="car-photo" />
      <% } else { %>
        <div class="placeholder-photo">No Photo Available</div>
      <% } %>
      <div class="car-details">
        <h3><%= car.name %> - $<%= car.price %></h3>
        <p><strong>Year:</strong> <%= car.year %></p>
        <a href="/cars/<%= car._id %>" class="view-details-button">View Details</a>
    </div>
  <% }) %>
  <% } else { %>
    <p>You have not added any cars yet. <a href="/cars/new">Add a Car</a></p>
  <% } %>
  
</div>

<%- include('../partials/footer.ejs')%>